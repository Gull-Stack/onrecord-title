<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-brand">
        <span class="footer-logo">On<span class="logo-accent">Record</span> Title</span>
        <p>{{ site.tagline }}</p>
        <p class="footer-license">{{ site.license }}</p>
      </div>
      
      <div class="footer-links">
        <h4>Services</h4>
        <ul>
          <li><a href="{{ '/services/residential/' | url }}">Residential Closings</a></li>
          <li><a href="{{ '/services/commercial/' | url }}">Commercial Closings</a></li>
          <li><a href="{{ '/services/mobile-closing/' | url }}">Mobile Closings</a></li>
          <li><a href="{{ '/services/online-closing/' | url }}">Online Closings</a></li>
        </ul>
      </div>
      
      <div class="footer-links">
        <h4>Company</h4>
        <ul>
          <li><a href="{{ '/about/' | url }}">About Us</a></li>
          <li><a href="{{ '/about/#team' | url }}">Our Team</a></li>
          <li><a href="{{ '/locations/' | url }}">Locations</a></li>
          <li><a href="{{ '/contact/' | url }}">Contact</a></li>
        </ul>
      </div>
      
      <div class="footer-contact">
        <h4>Contact Us</h4>
        <p><a href="tel:{{ site.phone }}">{{ site.phone }}</a></p>
        <p><a href="mailto:{{ site.email }}">{{ site.email }}</a></p>
        <p>{{ site.address.street }}<br>{{ site.address.city }}, {{ site.address.state }} {{ site.address.zip }}</p>
        <p class="footer-hours">{{ site.hours }}</p>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; 2026 {{ site.name }}. All rights reserved.</p>
      <p class="footer-credit">Marketing by <a href="https://gullstack.com" target="_blank" rel="noopener">GullStack</a></p>
    </div>
  </div>
</footer>
